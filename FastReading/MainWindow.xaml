<Window x:Class="FastReading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastReading"
        mc:Ignorable="d"
        Title="Выбор книги" Height="400" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Выберете книгу" Margin="67,19,279,0" VerticalAlignment="Top" FontSize="14" />
        <ComboBox HorizontalAlignment="Left" Margin="67,53,0,0" VerticalAlignment="Top" Width="360" SelectionChanged="ComboBox_SelectionChanged" x:Name="booksComboBox" />
        <TextBlock HorizontalAlignment="Left" Margin="67,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="163" Width="360" x:Name="bookDescription" TextTrimming="WordEllipsis" />
        <Button Content="Читать" HorizontalAlignment="Left" Margin="352,312,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Cursor="Hand" />
        <Button Content="Сменить пользователя" HorizontalAlignment="Left" Margin="67,312,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click_1" Cursor="Hand" />
    </Grid>
</Window>
