<Window x:Class="FastReading.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastReading"
        mc:Ignorable="d"
        Title="LogInWindow" Height="265" Width="290" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="30,24,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="30,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" x:Name="loginBox" />
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="30,94,0,0" VerticalAlignment="Top" />
        <PasswordBox HorizontalAlignment="Left" Height="23" Margin="30,125,0,0" VerticalAlignment="Top" Width="226" x:Name="passBox"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="30,183,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="Button_Click" />
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="181,183,0,0" VerticalAlignment="Top" Height="30" Width="75" Click="Button_Click_1" />
    </Grid>
</Window>
